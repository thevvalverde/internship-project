// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model client {
  id      Int       @id @default(autoincrement())
  email   String    @unique
  consent consent[]
}

model consent {
  id             Int              @id @default(autoincrement())
  description    String
  subjectOption  Boolean
  consentDate    DateTime         @default(now()) @updatedAt
  policy         policy           @relation(fields: [policyID], references: [id])
  policyID       Int
  organization   organization     @relation(fields: [orgReference], references: [id])
  orgReference   Int
  subject        client           @relation(fields: [subjectId], references: [id])
  subjectId      Int
  revokeDate     DateTime?
  validUntil     DateTime
  consentHistory consentHistory[]
}

model policy {
  id      Int       @id @default(autoincrement())
  policy  String
  consent consent[]
}

model organization {
  id           Int           @id @default(autoincrement())
  name         String        @default("None")
  contactPhone String
  contactEmail String
  consent      consent[]
  defaultData  defaultData[]
}

model consentHistory {
  id           Int      @id @default(autoincrement())
  consent      consent  @relation(fields: [consentID], references: [id])
  consentID    Int
  changedValue Boolean
  timestamp    DateTime @default(now())
}

model defaultData {
  id              Int          @id @default(autoincrement())
  orgReference    Int
  organization    organization @relation(fields: [orgReference], references: [id])
  defaultPolicy   String
  defaultConsents String[]
}
